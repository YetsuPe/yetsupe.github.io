footer
	background-color: COLOR_DARK
	padding: 10px 0

.row
	& blockquote
		width 90%
		margin .5rem auto 0 auto
		background-color #334960
		padding .5rem
		border-radius .8rem
		border 2px solid #2E2D38
		text-align center
		color COLOR_WHITE
		&:before
		&:after
			font-family "FontAwesome"
			font-size 1rem
			color COLOR_THEME
		&:before
			content: "\f10d"
		&:after
			content: "\f10e"

	& img
		display block
		margin 0 auto

	& img.logo-circle
		width 50%;
		border-radius 50%
		background-color COLOR_WHITE
		border (SPACE/4) solid COLOR_DARK
	& .yetMenber
		float:left
		position: relative
		text-align center
		&>img 
			border .2rem solid COLOR_WHITE
		& a,span
			display block
			color white

		&:nth-of-type(1),&:nth-of-type(2),&:nth-of-type(3),&:nth-of-type(4),&:nth-of-type(5),&:nth-of-type(6),&:nth-of-type(7),&:nth-of-type(8)
			//top -100px
			width (100/4)%
			& img
				width:70%
				border-radius 50%
		&:nth-of-type(1),&:nth-of-type(4)
			top 5rem
		&:nth-of-type(5),&:nth-of-type(8)
			top -5rem
		&:nth-of-type(1),&:nth-of-type(5)
			right -1rem
		&:nth-of-type(4),&:nth-of-type(8)
			left -1rem

			
.briefcase
	& .row
		& figure
			& h3
				text-align center
			& img
				width 100%;
.contact
	& form 
		width 95%
		margin SPACE auto
		& fieldset
			border none
			margin 0
			& label 
				display block
				width 25%
				float left
				text-align right
				padding-right (SPACE/2)
				margin-top (SPACE/2)
			& input, textarea
				display block
				width 75%
				margin-bottom (SPACE/2)
				border-radius SPACE
				padding (SPACE/4)
				border none
			& textarea
				height SPACE*5

			& button
				padding (SPACE/4) SPACE
				display block
				border-radius SPACE
				block-center()
				background-color rgba(0, 0, 0, .5)
				color white
				border none
.ubication	
	&>div
		& div#yetLocal
			width:95%
			height: 13rem
			block-center()
			border-radius SPACE
			border .5rem solid #705210
		& address
			text-align center

.hidden-content
	z-index -1
	position absolute
.show-content
	z-index 1 !important
	position relative !important
.tansition-down
	transition all 0.4s ease-in-out 		