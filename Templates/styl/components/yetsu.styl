*
	transition(all 0.4s ease-in-out)
body
	//overflow: hidden
	font-family: 'Nunito', sans-serif
header,section,footer,aside
	position: relative
	//overflow hidden
	//background-color #005588
	left: 0
	transition(left 0.4s ease-in-out)
footer
	text-align center
	color white
	h2,h3
		margin 0
.service
	padding-bottom 0.2rem
	& h2
		text-align center
		padding (SPACE/2) 0
		margin 0
		& span
			border-radius 50%
			padding: 0.2rem 0
			position: absolute
			font-size 2.7rem
			top: -0.9rem
			background-color COLOR_WHITE
			display block !important
			width 4rem !important
			height 4rem !important
	&.PW
		& h2 
			background: COLOR_SERVICE_PW
			color lighten(COLOR_SERVICE_PW,90%)
			& span
				border .4rem solid COLOR_SERVICE_PW
				color COLOR_SERVICE_PW
				right: SPACE
	&.CO
		& h2 
			background: COLOR_SERVICE_CO
			color lighten(COLOR_SERVICE_CO,90%)
			& span
				border .4rem solid COLOR_SERVICE_CO
				color COLOR_SERVICE_CO
				left: SPACE
	&.EM
		& h2 
			background: COLOR_SERVICE_EM
			color lighten(COLOR_SERVICE_EM,90%)
			& span
				border .4rem solid COLOR_SERVICE_EM
				font-size 2.2rem
				padding .5rem 0
				color COLOR_SERVICE_EM
				right: SPACE
	&.AM
		& h2 
			background: COLOR_SERVICE_AM
			color lighten(COLOR_SERVICE_AM,90%)
			& span
				border .4rem solid COLOR_SERVICE_AM
				color COLOR_SERVICE_AM
				left: SPACE
	&.CT
		& h2 
			background: COLOR_SERVICE_CT
			color lighten(COLOR_SERVICE_CT,90%)
			& span
				border .4rem solid COLOR_SERVICE_CT
				color COLOR_SERVICE_CT
				right: SPACE
	&.DW
		& h2 
			background: COLOR_SERVICE_DW
			color lighten(COLOR_SERVICE_DW,90%)
			& span
				border .4rem solid COLOR_SERVICE_DW
				color COLOR_SERVICE_DW
				font-size 2.2rem
				padding .5rem 0
				left: SPACE


header
	height HEIGHT_HEADER
	background-color #009BDE
	& *
		color: #F2F2F2 
	h1
		line-height 3rem

.cources
	>div
		background-color:#E3BC4D
		overflow hidden
		width 95%
		margin .2rem auto
		border-radius .4rem
		& h3
			margin 0
			display block
			text-align center
			background-color  lighten(#E3BC4D,30%) 
			padding .2rem 0
			border-radius .4rem
		& img
			margin-top .2rem
			margin-bottom .2rem
			width 17%
			margin-left 3%
			float left
			border-radius .2rem
			&:nth-child(2)
				margin-left 1.5%
		&>a
			padding :2rem
			border-radius .5rem
			background-color COLOR_THEME
.row
	& .item
		text-align center
		float left
		width (100/3)%
		padding 0.2rem 
		& a
			display block

			>figure,>div
				min-height 1.2rem
			>figure
				background-color COLOR_WHITE
				margin .2rem auto
				padding-top .1rem
				width 4rem 
				height 4rem
				border-radius 50%
				font-size 2.7rem
				
			>div
				color COLOR_WHITE
		& section
			z-index -1
		&:nth-child(1)
			& a
				>figure
					color:COLOR_SERVICE_PW
					border 0.2rem solid COLOR_SERVICE_PW
		&:nth-child(2)
			& a
				>figure
					color:COLOR_SERVICE_CO
					border 0.2rem solid COLOR_SERVICE_CO
		&:nth-child(3)
			& a
				>figure
					color:COLOR_SERVICE_EM
					border 0.2rem solid COLOR_SERVICE_EM
		&:nth-child(4)
			& a
				>figure
					color:COLOR_SERVICE_AM
					border 0.2rem solid COLOR_SERVICE_AM
			
		&:nth-child(5)
			& a
				>figure
					color:COLOR_SERVICE_CT
					border 0.2rem solid COLOR_SERVICE_CT
		&:nth-child(6)
			& a
				>figure
					color:COLOR_SERVICE_DW
					border 0.2rem solid COLOR_SERVICE_DW  

