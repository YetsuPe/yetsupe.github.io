h1
	display:inline-block
body
	//overflow: hidden
header,section,footer
	position: relative
	//overflow hidden
	background-color #005588
	left: 0
	transition(left 0.4s ease-in-out)
footer
	text-align center
	color white
	h2,h3
		margin 0
section
	& h2
		text-align center
		padding (SPACE/2) 0
		color white
		margin 0
		background-color rgba(0, 0, 0, .5)
		& span
			border-radius 50% 50% 0 0
			padding: 0.8rem 1rem 0 1rem
			position: absolute
			right: SPACE
			top: -0.7rem
	&.briefcase
		& h2 span 
			background: COLOR_BRIEFCASE
	&.contact
		& h2 span 
			background: COLOR_CONTACT
	&.us
		& h2 span 
			background: COLOR_US
	&.ubication
		& h2 span 
			background: COLOR_UBICATION

header
	&>div 
		padding: .2em 0
	& *
		color: #F2F2F2 
	& em
		display:block;
		text-align:center	




aside.row
	overflow hidden
	& [class^="icon-"],[class*=" icon-"]
		width 12.5%
		float left
		text-align center
		color white
.cources
	>div
		background-color:#E3BC4D
		overflow hidden
		width 95%
		margin .2rem auto
		border-radius .4rem
		& h3
			margin 0
			display block
			text-align center
			background-color  lighten(#E3BC4D,30%) 
			padding .2rem 0
			border-radius .4rem
		& img
			margin-top .2rem
			margin-bottom .2rem
			width 17%
			margin-left 3%
			float left
			border-radius .2rem
			&:nth-child(2)
				margin-left 1.5%
		&>a
			padding :2rem
			border-radius .5rem
			background-color COLOR_THEME
.row
	& .item
		text-align center
		float left
		width 50%
		& a
			display block

			>figure,>div
				min-height 1.2rem
			>figure
				color white
				margin .2rem auto
				padding-top .2rem
				width 3rem 
				border-radius 50%
			>div
				color white
		& section
			z-index -1
		&:nth-child(1)
			& a
				>figure
					background-color:darken(COLOR_SERVICE_DW,10%)
			background-color:COLOR_SERVICE_DW
		&:nth-child(2)
			& a
				>figure
					background-color:darken(COLOR_SERVICE_PW,10%)
			background-color:COLOR_SERVICE_PW
		&:nth-child(3)
			& a
				>figure
					background-color:darken(COLOR_SERVICE_AM,10%)
			background-color:COLOR_SERVICE_AM
		&:nth-child(4)
			& a
				>figure
					background-color:darken(COLOR_SERVICE_CT,10%)
			background-color:COLOR_SERVICE_CT
			
		&:nth-child(5)
			& a
				>figure
					background-color:darken(COLOR_SERVICE_CO,10%)
			background-color:COLOR_SERVICE_CO
		&:nth-child(6)
			& a
				>figure
					background-color:darken(COLOR_SERVICE_EM,10%)
			background-color:COLOR_SERVICE_EM

