[role="menu"]
	z-index:2
	position : fixed
	height : 100%
	width: NAV_WIDTH
	left:-(NAV_WIDTH)
	background-color: darken(COLOR_THEME,30% )
	transition(left 0.4s ease-in-out)
	overflow-y:scroll
	& > a
		color: white
		display: block
		padding:  (SPACE/2)
		text-decoration : none
		border-bottom: 1px solid lighten(COLOR_THEME,30%)
		&:first-child
			line-height 0.4rem
			padding .2rem
			text-align center
			background-color: darken(COLOR_THEME,60% )
			padding-bottom .2rem

			& img
				width 2.5rem
				display inline-block
			& span
				display  inline-block
				font-size  1.3rem
				padding-top  1rem
				vertical-align  top
			& small
				display block
				margin-bottom .4rem

[role="slider"]
	margin 0
	background-color #009BDE
	padding-bottom .5rem 
	& figure 
		margin 0
		& img
			width 30%
			display block 
			margin 0 auto 
			background-color #C5C9CD
			border-radius 50%
