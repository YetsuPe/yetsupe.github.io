[role="user"]
	z-index:2
	position : fixed
	height : 100%
	width: NAV_WIDTH_USER
	right:-(NAV_WIDTH_USER)
	background-color: COLOR_WHITE
	transition(right 0.4s ease-in-out)
	overflow-y:scroll
[role="menu"]
	z-index:2
	position : fixed
	height : 100%
	width: NAV_WIDTH
	left:-(NAV_WIDTH)
	background-color: COLOR_WHITE
	transition(left 0.4s ease-in-out)
	overflow-y:scroll
	& a
		color: darken(COLOR_WHITE,80%)
		display: block
		padding:  (SPACE/2)
		text-decoration : none
		& span
			display inline-block
			width 30%
			text-align center 
		&:not(span)
			vertical-align top
		&:first-child
			line-height 0.2rem
			height 3rem 
			text-align center
			background-color: COLOR_THEME
			padding-bottom .2rem
			& span
				display  inline-block
				font-size  1.3rem
				padding 1rem 0
				vertical-align  top
				color COLOR_WHITE
		&:nth-child(2) 
			border-bottom: .1rem solid COLOR_THEME
			& span
				color COLOR_THEME
		&:nth-child(3) 
			border-bottom: .1rem solid COLOR_US
			& span
				color COLOR_US
		&:nth-child(4) 
			border-bottom: .1rem solid COLOR_BRIEFCASE
			& span
				color COLOR_BRIEFCASE
		&:nth-child(5) 
			border-bottom: .1rem solid COLOR_UBICATION
			& span
				color : COLOR_UBICATION
		&:nth-child(6) 
			border-bottom: .1rem solid COLOR_COURCES 
			& span
				color COLOR_COURCES 
		&:nth-child(7) 
			border-bottom: .1rem solid COLOR_BLOG
			& span
				color COLOR_BLOG
		&:nth-child(8) 
			border-bottom: .1rem solid COLOR_CONTACT
			& span
				color : COLOR_CONTACT
		&:nth-child(9) 
			border-bottom: .1rem solid COLOR_CONTACT
			& span
				color : COLOR_CONTACT
				

[role="slider"]
	margin 0
	background-color #009BDE
	padding-bottom .5rem 
	text-align center
	color white
	& figure 
		margin 0
		& img
			width 30%
			display block 
			margin 0 auto 
			background-color white
			border-radius 50%
			
[role="services"]
	//background-color COLOR_THEME
	background-color: #009BDE
	padding .5rem 0 1rem 0

[role="ico-menu"],[role="ico-user"]
	position: absolute
	padding: .3rem .4rem
	width:HEIGHT_HEADER
	height HEIGHT_HEADER
[role="ico-menu"]
	left 0
[role="ico-user"]
	right 0

// Logo en canvas
[role="logo"]
	position: absolute
	//margin-right: 12px
	right: 0
	//padding: .3rem .4rem
	width:HEIGHT_HEADER
	height HEIGHT_HEADER
	//border-radius 50%
	//background-color:darken(COLOR_THEME,40%)
	z-index 2

[role="aside"]
	position fixed
	background-color white
	bottom 0
	z-index 2
	width 100%
	transition(all 0.4s ease-in-out)
	>div >figure
		display block
		width 25%
		/*margin-left (10/3)%
		margin-top (10/3)%
		margin-bottom (10/3)%*/
		height 25%
		float left
		text-align center
		padding 1rem
		>span
			color COLOR_WHITE
			background-color COLOR_THEME
			border-radius 1rem
			font-size 2rem
			padding .5rem 
	>span
		display block 
		background-color white
		color COLOR_THEME
		position absolute
		top -2rem
		text-align center
		width 2rem
		height 2rem
		border-radius 1rem 1rem 0 0
		right SPACE
		cursor pointer

.open-menu
	left:0px
.move-blocks
	left:NAV_WIDTH

.open-user
	right:0px
.move-blocks-user
	right:NAV_WIDTH_USER

.showSocial
	bottom 0  !important
.overflow-x
	overflow-x hidden