@media only screen and (min-width: 480px) 
	html 
		font-size: 87.5%  /* 14px */
	.us
		&>img, blockquote
			float right
		&>img
			width 15%
		& blockquote
			margin-left 1%
			width 84%
	.row
		& .yetMenber
			&:nth-of-type(1),&:nth-of-type(4)
				top 4.5rem
			&:nth-of-type(5),&:nth-of-type(8)
				top -4.5rem
			&:nth-of-type(1),&:nth-of-type(5)
				right -4.5rem
			&:nth-of-type(4),&:nth-of-type(8)
				left -4.5rem
@media only screen and (min-width: 768px) 
	html 
		font-size: 92%   
	.row
		margin 0 auto
		width 100%
		text-align center
		.item
			width (100/6)%
			float left
			>figure,>div
				float none
				block-center(.2rem,0)
			>figure
				color white
				padding .5rem
				border-radius 50%
				width 3rem
				height 3rem
				//width: 20%
			>div
				//width: 80%

		
@media only screen and (min-width: 960px) 
	html 
		font-size: 100%
	.row
		margin 0 auto
		width 960px

	[role="ico-menu"]
		z-index -1
	header
		position absolute
		width 100%
		height 8rem
		overflow: visible
		& div
			& h1
				padding .1rem 1rem 
				color COLOR_WHITE
				position absolute
				z-index 3
				left 0
				font-size 2rem
				top -4rem
				background-color COLOR_THEME
				margin-left 2rem
				border-radius 0 0 1rem 1rem  
	[role="menu"]
		left: 0
		width: 100%
		position: relative
		overflow-y: hidden
		padding-left:7rem
		padding-top 2rem
		text-align right
		border-top .3rem solid COLOR_THEME
		& > a
			display: inline-block
			text-align center 
			padding .1rem .4rem
			color COLOR_WHITE
			width 12%
			& span
				display none
				width 100%
				text-align center 
			&:first-child
				display none
			&:nth-child(2) 
				border-bottom: .3rem solid COLOR_THEME
				background-color COLOR_THEME
				& span
					color COLOR_WHITE
			&:nth-child(3) 
				border-bottom: .3rem solid COLOR_US
				background-color COLOR_US
				& span
					color COLOR_WHITE
			&:nth-child(4) 
				border-bottom: .3rem solid COLOR_BRIEFCASE
				background-color COLOR_BRIEFCASE
				& span
					color COLOR_WHITE
			&:nth-child(5) 
				border-bottom: .3rem solid COLOR_UBICATION
				background-color : COLOR_UBICATION
				& span
					color COLOR_WHITE
			&:nth-child(6) 
				border-bottom: .3rem solid COLOR_COURCES 
				background-color COLOR_COURCES 
				& span
					color COLOR_WHITE
			&:nth-child(7) 
				border-bottom: .3rem solid COLOR_BLOG
				background-color COLOR_BLOG
				& span
					color COLOR_WHITE
			&:nth-child(8) 
				border-bottom: .3rem solid COLOR_CONTACT
				background-color : COLOR_CONTACT
				& span
					color COLOR_WHITE
			&:nth-child(9) 
				border-bottom: .3rem solid COLOR_CONTACT
				background-color : COLOR_CONTACT
				& span
					color COLOR_WHITE

	[role="logo"]
		margin-right 2.5rem 
	[role="slider"]
		//background-color white
		& figure 
			margin 0 auto
			width 960px
	

@media only screen and (min-width: 1200px) 
	.row
		width 1200px
	[role="slider"]
		& figure 
			width 1200px
		
	