
html 
	font-size:75%

h1
	margin : 0
	font-size: 50px /*IE*/
	font-size:1.3rem 
h2
	font-size:1rem
h3
	font-size:.8rem


//******************** MEDIA QUERIES *******************************/
@media only screen and (min-width: 320px) 
	html 
		font-size: 81.25% /* 13px */
@media only screen and (min-width: 480px) 
	html 
		font-size: 87.5%  /* 14px */
	.us
		&>img, blockquote
			float right
		&>img
			width 15%
		& blockquote
			margin-left 1%
			width 84%
	.row
		& .yetMenber
			&:nth-of-type(1),&:nth-of-type(4)
				top 4.5rem
			&:nth-of-type(5),&:nth-of-type(8)
				top -4.5rem
			&:nth-of-type(1),&:nth-of-type(5)
				right -4.5rem
			&:nth-of-type(4),&:nth-of-type(8)
				left -4.5rem
@media only screen and (min-width: 768px) 
	html 
		font-size: 92%   
	.row
		margin 0 auto
		width 100%
		text-align center
		.item
			width (100/6)%
			float left
			>figure,>div
				float none
				block-center(.2rem,0)
			>figure
				color white
				padding .5rem
				border-radius 50%
				width 3rem
				height 3rem
				//width: 20%
			>div
				//width: 80%

		
@media only screen and (min-width: 960px) 
	html 
		font-size: 100%
	.row
		margin 0 auto
		width 960px

	[role="ico-menu"]
		z-index -1
	header
		position absolute
		width 100%
		height 8rem
		overflow: visible
		& div
			& h1
				padding-left 1rem
				color #003B5F
				position absolute
				z-index 3
				left 0
				font-size 2rem
				top -3rem
				color white 
	[role="menu"]
		left: 0
		width: 100%
		position: relative
		overflow-y: hidden
		padding-left:7rem
		text-align right
		& > a
			display: inline-block
			text-align center 
			padding .1rem .4rem
			&:first-child
				display none
			&:nth-child(2)
				color COLOR_SERVICE_PW
				background-color lighten(COLOR_SERVICE_PW,50%)
				border-bottom: 0.4rem solid COLOR_SERVICE_PW
			&:nth-child(3)
				color COLOR_SERVICE_AM
				background-color lighten(COLOR_SERVICE_AM,50%)
				border-bottom: 0.4rem solid COLOR_SERVICE_AM
			&:nth-child(4)
				color COLOR_SERVICE_CT
				background-color lighten(COLOR_SERVICE_CT,50%)
				border-bottom: 0.4rem solid COLOR_SERVICE_CT
			&:nth-child(5)
				color COLOR_SERVICE_CO
				background-color lighten(COLOR_SERVICE_CO,50%)
				border-bottom: 0.4rem solid COLOR_SERVICE_CO
			&:nth-child(6)
				color COLOR_SERVICE_EM
				background-color lighten(COLOR_SERVICE_EM,50%)
				border-bottom: 0.4rem solid COLOR_SERVICE_EM

			& span
				display block !important

	[role="logo"]
		margin-right 2.5rem 
	[role="slider"]
		background-color white
		& figure 
			margin 0 auto
			width 960px
	
	

@media only screen and (min-width: 1200px) 
	.row
		width 1200px
	[role="slider"]
		& figure 
			width 1200px
		
	