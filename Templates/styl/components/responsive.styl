//******************** MEDIA QUERIES *******************************/
@media only screen and (min-width: 320px) 
	html 
		font-size: 81.25% /* 13px */
	[role="slider"]
		background: url('../images/portada-tablet-yetsu.jpg') no-repeat top
	/******* YetMenbers *********/

@media only screen and (min-width: 480px) 
	html 
		font-size: 87.5%  /* 14px */
	/******* YetMenbers *********/
	.yetMenber
		width 50%
		float left
	.us
		&>img, blockquote
			float right
		&>img
			width 15%
		& blockquote
			margin-left 1%
			width 84%
	
	[role="slider"]
		background: url('../images/portada-laptop-yetsu.jpg') no-repeat top
@media only screen and (min-width: 768px) 
	html 
		font-size: 92%   
	[role="slider"]
		background: url('../images/portada-pc-yetsu.jpg') no-repeat top
	/******* YetMenbers *********/
	.yetMenber
		width 22.5%
		margin-left (10/5)%
		margin-top (10/5)%
		&:first-child
			margin-left (10/5)%
	

	/******Yetservices******/
	[role="services"]
		& a
			width (100/6)%
	.row
		margin 0 auto
		width 100%
		text-align center
		.item
			width (100/6)%
			float left
			>figure,>div
				float none
				block-center(.2rem,0)
			>figure
				color white
				padding .5rem
				border-radius 50%
				width 3rem
				height 3rem
				//width: 20%
			>div
				//width: 80%

		
@media only screen and (min-width: 960px) 
	html 
		font-size: 100%
	.row
		text-align inherit
	.yetMenber
		& img 
			width 100%
			height auto
		& ul 
			display block
	
	[role="logo"]
		position relative
		background-color transparent
		border-radius 0 
		z-index 2
		width wLogo=3rem
		top - (wLogo+1)
		display inline-block
		border none
		& img
			width 100%
	
	[role="ico-menu"]
		z-index -1
	
	[role="ico-user"]
		z-index -1
	
	[role="slider"]
		background-image url('../images/portada.jpg')
		min-height 400px

	header
		position relative
		width 100%
		height 4rem
		overflow: visible
		text-align inherit
		& h1
			margin-left 3rem
			padding-top SPACE
	[role="user"]
		display none	
		z-index:2
		position : relative
		height : 100%
		width: NAV_WIDTH_USER
		background-color: COLOR_THEME
		overflow-y:scroll
		right 0
	[role="aside"]
		position absolute 
		top 0 !important
		background-color transparent
		text-align right
		z-index 1
		& span
			padding SPACE
			color COLOR_WHITE

	.csstransforms3d [role="menu"] a span:before
		position: absolute
		top: 100%
		left: 0
		width: 100%
		height: 100%
		color COLOR_WHITE
		content: attr(data-hover)
		transition: background 0.2s ease
		transform: rotateX(-90deg)
		transform-origin: 50% 0
		padding-top 0.18rem
	.csstransforms3d [role="menu"] a:nth-child(2):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(2):focus span:before 
		background: darken(COLOR_THEME,20%)
	.csstransforms3d [role="menu"] a:nth-child(3):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(3):focus span:before 
		background: darken(COLOR_US,20%)
	.csstransforms3d [role="menu"] a:nth-child(4):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(4):focus span:before 
		background: darken(COLOR_BRIEFCASE,20%)
	.csstransforms3d [role="menu"] a:nth-child(5):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(5):focus span:before 
		background: darken(COLOR_UBICATION,20%)
	.csstransforms3d [role="menu"] a:nth-child(6):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(6):focus span:before 
		background: darken(COLOR_COURCES,20%)
	.csstransforms3d [role="menu"] a:nth-child(7):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(7):focus span:before 
		background: darken(COLOR_BLOG,20%)
	.csstransforms3d [role="menu"] a:nth-child(8):hover span:before,
	.csstransforms3d [role="menu"] a:nth-child(8):focus span:before 
		background: darken(COLOR_CONTACT,20%)

	[role="menu"]
		left: 0
		width: 100%
		height 0 
		position: absolute
		overflow: visible
		top 1.2rem
		margin 0 
		text-align right
		&  a
			/*********** efect **/
			perspective 50rem
			/********************/
			display: inline-block
			text-align center 
			padding 0
			*width 11%
			width 7rem
			border-bottom: none !important
			position relative
			transition top .2s ease-in-out
			&:hover span, :focus span 
				transform: rotateX(90deg) translateY(-22px)
			&:active
				top .2rem
				/*border-bottom: 0 solid COLOR_THEME !important*/
			& span
				&:nth-of-type(1)
					display none
				&:nth-of-type(2)
					display block
					transition transform .4s
					transform-origin 50% 0
					transform-style preserve-3d
					padding .18rem 0
			&:first-child
				display none
			
	[role="services"]
		background-color #319028
	
	.open-menu
		left:none !important
	.move-blocks
		left:none !important
	.overflow-x
		overflow-x visible !important

