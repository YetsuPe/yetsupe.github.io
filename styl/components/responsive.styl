*
	transition(all 0.4s ease-in-out)
html 
	font-size:75%

h1
	margin : 0
	font-size: 50px /*IE*/
	font-size:1.3rem 
h2
	font-size:1rem
h3
	font-size:.8rem


//******************** MEDIA QUERIES *******************************/
@media only screen and (min-width: 320px) 
	html 
		font-size: 81.25% /* 13px */
@media only screen and (min-width: 480px) 
	html 
		font-size: 87.5%  /* 14px */
	.us
		overflow hidden
		padding 0 1rem
		&>img, blockquote
			float right
		&>img
			width 15%
		& blockquote
			margin-left 1%
			width 84%
	.row
		& .yetMenber
			&:nth-of-type(1),&:nth-of-type(4)
				top 4.5rem
			&:nth-of-type(5),&:nth-of-type(8)
				top -4.5rem
			&:nth-of-type(1),&:nth-of-type(5)
				right -4.5rem
			&:nth-of-type(4),&:nth-of-type(8)
				left -4.5rem
@media only screen and (min-width: 768px) 
	html 
		font-size: 92%   
	.row
		margin 0 auto
		width 100%
		text-align center
		.item
			width 20%
			float left
			>figcaption,>div
				float none
				block-center(.2rem,0)
			>figcaption
				color white
				padding .5rem
				border-radius 50%
				width 3rem
				height 3rem
				//width: 20%
			>div
				//width: 80%

		.item:nth-child(1)
			background-color:darken(#E3BC4D,20%)
			>figcaption
				background-color:darken(#E3BC4D,50%)
			>div
				background-color:transparent
		.item:nth-child(2)
			background-color:darken(#E65056,20%)
			>figcaption
				background-color:darken(#E65056,50%)
			>div
				background-color:transparent
		.item:nth-child(3)
			background-color:darken(#29C0AE,20%)
			>figcaption
				background-color:darken(#29C0AE,50%)
			>div
				background-color:transparent
		.item:nth-child(4)
			background-color:darken(#5267B5,20%)
			>figcaption
				background-color:darken(#5267B5,50%)
			>div
				background-color:transparent
		.item:nth-child(5)
			background-color:darken(#9E54BD,20%)
			>figcaption
				background-color:darken(#9E54BD,50%)
			>div
				background-color:transparent

		
@media only screen and (min-width: 960px) 
	html 
		font-size: 100%
	.row
		margin 0 auto
		width 960px

	[role="ico-menu"]
		z-index -1
	header
		position absolute
		width 100%
		height 8rem
		overflow: visible
		& div
			& h1
				padding-left 1rem
				color #003B5F
				position absolute
				z-index 3
				left 0
				font-size 2rem
				top -3rem
				color white 
	[role="menu"]
		left: 0
		width: 100%
		position: relative
		overflow-y: hidden
		padding-left:7rem
		text-align right
		& > a
			display: inline-block
			border-bottom: 0 
			&:first-child
				display none
	[role="logo"]
		margin-right 2.5rem 
	[role="slider"]
		background-color white
		& figcaption 
			margin 0 auto
			width 960px
	
	

@media only screen and (min-width: 1200px) 
	.row
		width 1200px
	[role="slider"]
		& figcaption 
			width 1200px
		
	